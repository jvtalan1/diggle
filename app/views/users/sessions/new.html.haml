.container
  .col-md-6.col-md-offset-1.col-sm-6
    .login-masthead
      %h3 Welcome to Diggles.
      %br
      %h4 Connect with your friends and other fascinating people.
  .col-md-3.col-sm-4
    .login-con
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-inputs
          = f.input :email, required: false, autofocus: true, label: false, placeholder: 'Username or email'
          = f.input :password, required: false, label: false, placeholder: 'Password'
          = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
        .form-actions.login-button
          = f.button :submit, "Log in", class: 'btn btn-primary btn-round login-button'
      .forgot-password
        - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
          = link_to "Forgot your password?", new_password_path(resource_name)
    .signup-con
      %h4 Join Diggles?
      %div
        - if devise_mapping.registerable? && controller_name != 'registrations'
          = link_to "Sign up for Diggles", new_registration_path(resource_name), class: "btn btn-primary btn-round-lg"
