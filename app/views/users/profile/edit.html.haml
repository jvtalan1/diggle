.profile-edit-img-con
  = image_tag(resource.user_profile.picture.url, class: 'profile-img-edit') if resource.user_profile.picture?
.container
  .col-md-4.col-md-offset-4.col-sm-4
    .update-profile-con
      %h2.text-center
        Edit your profile
      .profile-edit-form
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f|
          = f.fields_for(:user_profile) do |p|
            = p.error_notification
            .form-inputs
              = p.input :picture, type: :file, label: false
              = p.input :full_name, required: true, autofocus: true, label: false, placeholder: 'Full name'
              = p.input :username, required: true, hint: "You may change this anytime", label: false, placeholder: 'Username'
              = p.input :phone_number, label: false, placeholder: 'Phone number'
              = p.input :location, label: false, placeholder: 'Location'
            .form-actions
              = f.button :submit, "Update Profile", class: "btn btn-primary btn-round-extra-lg"
      .link-helpers
        = link_to "Back", :back
