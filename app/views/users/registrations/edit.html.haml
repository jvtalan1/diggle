.container
  .col-md-4.col-md-offset-4.col-sm-4
    .account-settings-con
      %h2.text-center
        Account Settings
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f|
        = f.error_notification
        .form-inputs
          = f.input :email, required: true, label: false, placeholder: 'Email'
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %p
              Currently waiting confirmation for: #{resource.unconfirmed_email}
          = f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, label: false, placeholder: 'Password'
          = f.input :password_confirmation, required: false, label: false, placeholder: 'Confirm password'
          = f.input :current_password, hint: "we need your current password to confirm your changes", required: true, label: false, placeholder: 'Current password'
        .form-actions
          = f.button :submit, "Update Account", class: 'btn btn-primary btn-round-extra-lg'
      %h3 Cancel my account
      %p
        Unhappy? #{link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
      = link_to "Back", :back
