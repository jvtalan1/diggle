.container
  .col-md-4.col-md-offset-4.col-sm-4.update-profile-form
    %h2
      Edit your profile
    = image_tag(resource.user_profile.picture.url) if resource.user_profile.picture?
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f|
      = f.fields_for(:user_profile) do |p|
        = p.error_notification
        .form-inputs
          = p.input :picture, type: :file
          = p.input :full_name, required: true, autofocus: true
          = p.input :username, required: true, hint: "You may change this anytime"
          = p.input :phone_number
          = p.input :location
        .form-actions
          = f.button :submit, "Update"
    = link_to "Back", :back
