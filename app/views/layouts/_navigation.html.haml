            = link_to page_path('about'), class: 'nav-link' do
              %i{class: 'ionicons ion-ios-information icon-nav'}
              %span About
    .collapse.navbar-collapse.navbar-items-user
      - if user_signed_in?
        .dropdown
          %button.btn.dropdown-toggle.user-dropdown{'type' => 'button', 'data-toggle' => 'dropdown'}
            %span{class: 'ionicons'} &#xf3a0;
          %ul.dropdown-menu
            %li
              = link_to edit_profile_path, class: 'nav-link' do
                %i{class: 'ionicons ion-android-person'}
