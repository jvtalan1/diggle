  .container.navbar-container
    .collapse.navbar-collapse.navbar-items-con
      %ul.navbar-nav
        %li.nav-item
          = link_to authenticated_root_path, class: 'nav-link' do
            %i{class: 'ionicons ion-android-home icon-nav'}
            %span Home
