.modal-container
  .modal-header
    %button.close{"type" => "button", "data-dismiss" => "modal", "aria-hidden" => "true"}x
    %h4.text-center Compose New Diggle
  .modal-body
    = simple_form_for(@post, html: { multipart: true, remote: true }) do |f|
      - if @post.errors.any?
        #error-explanation
          %h2
            = "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved."
          %ul
            - @post.errors.full_messages.each do |msg|
              %li= msg
      .form-group.diggle-form
        = f.text_area :body, placeholder: 'Share your diggle', label: false, class: "form-control diggle-text-form"
        %span.btn.upload-button.diggle-file-form{title: 'Upload Picture'}
          %i.ionicons.ion-image
          = f.file_field :picture
        = f.button :submit, 'Share', class: 'btn btn-primary btn-round-solid'
