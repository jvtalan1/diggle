= simple_form_for @post do |f|
  - if @post.errors.any?
    #error-explanation
      %h2
        = "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved."
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.input :body, as: :text, input_html: { placeholder: 'Share your diggle' }, label: false, class: "form-control"
  .form-group
    = f.button :submit
